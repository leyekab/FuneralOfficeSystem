@page
@model FuneralOfficeSystem.Pages.Clients.CreateModel

@{
    ViewData["Title"] = "Δημιουργία Εντολέα";
}

<div class="container">
    <h1 class="text-center mb-4">Δημιουργία Εντολέα</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post" id="createForm">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Client.FirstName" class="control-label">Όνομα</label>
                                    <input asp-for="Client.FirstName" class="form-control" required />
                                    <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Client.LastName" class="control-label">Επώνυμο</label>
                                    <input asp-for="Client.LastName" class="form-control" required />
                                    <span asp-validation-for="Client.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Client.AFM" class="control-label">ΑΦΜ</label>
                                    <input asp-for="Client.AFM" class="form-control" />
                                    <span asp-validation-for="Client.AFM" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Client.Phone" class="control-label">Τηλέφωνο</label>
                                    <input asp-for="Client.Phone" class="form-control" required />
                                    <span asp-validation-for="Client.Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <span class="text-danger">*</span>
                            <label asp-for="Client.Address" class="control-label">Διεύθυνση</label>
                            <input asp-for="Client.Address" class="form-control" required />
                            <span asp-validation-for="Client.Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Client.Email" class="control-label">Email</label>
                            <input asp-for="Client.Email" class="form-control" />
                            <span asp-validation-for="Client.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Client.RelationshipToDeceased" class="control-label">Σχέση με τον Αποβιώσαντα</label>
                            <input asp-for="Client.RelationshipToDeceased" class="form-control" />
                            <span asp-validation-for="Client.RelationshipToDeceased" class="text-danger"></span>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <a asp-page="Index" class="btn btn-secondary w-100">Επιστροφή στη Λίστα</a>
                            </div>
                            <div class="col-md-6">
                                <input type="submit" value="Δημιουργία" class="btn btn-primary w-100" id="saveButton" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Προσθήκη client-side κώδικα για να επιβεβαιώσουμε ότι η φόρμα υποβάλλεται σωστά
        $(document).ready(function () {
            $("#createForm").on("submit", function (e) {
                console.log("Client create form submitted");
                // Επιστρέφουμε true για να επιτρέψουμε την κανονική υποβολή της φόρμας
                return true;
            });
        });
    </script>
}