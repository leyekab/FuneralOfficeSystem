@page
@model FuneralOfficeSystem.Pages.Clients.DetailsModel

@{
    ViewData["Title"] = "Λεπτομέρειες Εντολέα";
}

<div class="container">
    <h1 class="text-center mb-4">Λεπτομέρειες Εντολέα</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th style="width: 30%;">
                                        Όνομα
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.FirstName)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Επώνυμο
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.LastName)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        ΑΦΜ
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.AFM)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Διεύθυνση
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.Address)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Τηλέφωνο
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.Phone)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Email
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.Email)
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Σχέση με τον Αποβιώσαντα
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Client.RelationshipToDeceased)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <a asp-page="./Index" class="btn btn-secondary w-100">Επιστροφή στη Λίστα</a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="./Edit" asp-route-id="@Model.Client.Id" class="btn btn-primary w-100">Επεξεργασία</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>