@page
@model FuneralOfficeSystem.Pages.FuneralOffices.DetailsModel

@{
    ViewData["Title"] = "Λεπτομέρειες Γραφείου Τελετών";
}

<div class="container">
    <h1 class="mb-4">Λεπτομέρειες Γραφείου Τελετών</h1>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.FuneralOffice.Name</h4>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FuneralOffice.Name):
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.FuneralOffice.Name)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FuneralOffice.Address):
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.FuneralOffice.Address)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FuneralOffice.Phone):
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.FuneralOffice.Phone)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FuneralOffice.IsEnabled):
                </div>
                <div class="col-md-9">
                    @if (Model.FuneralOffice.IsEnabled)
                    {
                        <span class="badge bg-success">Ναι</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Όχι</span>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Index" class="btn btn-secondary">Επιστροφή στη Λίστα</a>
                <a asp-page="./Edit" asp-route-id="@Model.FuneralOffice.Id" class="btn btn-primary">Επεξεργασία</a>
            </div>
        </div>
    </div>
</div>