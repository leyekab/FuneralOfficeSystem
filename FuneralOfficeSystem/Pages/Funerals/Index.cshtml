@page
@model FuneralOfficeSystem.Pages.Funerals.IndexModel

@{
    ViewData["Title"] = "Κηδείες";
}

<div class="container">
    <h1 class="text-center mb-4">Κηδείες</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            @* <a asp-page="Create" class="btn btn-primary">Προσθήκη Νέας Κηδείας</a> *@
            <a asp-page="Create" asp-route-returnUrl="/Funerals/Index" class="btn btn-primary">Προσθήκη Νέας Κηδείας</a>
        </div>
        <div class="col-md-6">
            <form method="get" class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Αναζήτηση κηδείας..." />
                <button type="submit" class="btn btn-outline-secondary">Αναζήτηση</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].FuneralDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].Deceased)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].Client)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].Church)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].CeremonyTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].BurialPlace)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].FuneralOffice)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funeral[0].IsFinalBill)
                                    </th>
                                    <th>Ενέργειες</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Funeral)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FuneralDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Deceased.FirstName) @Html.DisplayFor(modelItem => item.Deceased.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Client.FirstName) @Html.DisplayFor(modelItem => item.Client.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Church)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CeremonyTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BurialPlace)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FuneralOffice.Name)
                                        </td>
                                        <td>
                                            @if (item.IsFinalBill)
                                            {
                                                <span class="badge bg-success">Ναι</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Όχι</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Επεξεργασία</a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Λεπτομέρειες</a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Διαγραφή</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>