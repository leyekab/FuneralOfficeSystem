    <!-- Λίστα με τις κηδείες των τελευταίων 90 ημερών -->
    <div class="row mt-4">
        <div class="col-12">
            <h2 class="mb-4">Κηδείες τελευταίων 90 ημερών</h2>

            @if (Model.RecentFunerals.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Ημερομηνία</th>
                                <th>Αποβιώσας</th>
                                <th>Εντολέας</th>
                                <th>Εκκλησία</th>
                                <th>Ώρα</th>
                                <th>Γραφείο Τελετών</th>
                                <th>Τελικός Λογαριασμός</th>
                                <th>Ενέργειες</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var funeral in Model.RecentFunerals)
                            {
                                <tr>
                                    <td>@(funeral.FuneralDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>@funeral.Deceased.FullName</td>
                                    <td>@funeral.Client.FullName</td>
                                    <td>@funeral.Church</td>
                                    <td>@funeral.CeremonyTime</td>
                                    <td>@funeral.FuneralOffice.Name</td>
                                    <td>
                                        @if (funeral.IsFinalBill)
                                        {
                                            <span class="badge bg-success">Ναι</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Όχι</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Funerals/Details?id=@funeral.Id" class="btn btn-sm btn-info">Λεπτομέρειες</a>
                                        <a href="/Funerals/Edit?id=@funeral.Id" class="btn btn-sm btn-primary">Επεξεργασία</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">Δεν υπάρχουν κηδείες τις τελευταίες 90 ημέρες.</div>
            }
        </div>
    </div>
