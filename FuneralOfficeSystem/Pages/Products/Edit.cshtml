@page "{id:int}"
@model FuneralOfficeSystem.Pages.Products.EditModel

@{
    ViewData["Title"] = "Επεξεργασία Προϊόντος";
}

<div class="container">
    <h1 class="text-center mb-4">Επεξεργασία Προϊόντος</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post" id="editForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Product.Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Product.Name" class="control-label">Όνομα</label>
                                    <input asp-for="Product.Name" class="form-control" required />
                                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Product.Category" class="control-label">Κατηγορία</label>
                                    <input asp-for="Product.Category" class="form-control" required />
                                    <span asp-validation-for="Product.Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.Description" class="control-label">Περιγραφή</label>
                            <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Product.SupplierId" class="control-label">Προμηθευτής</label>
                            <select asp-for="Product.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                            <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="Product.IsEnabled" class="form-check-input" />
                            <label asp-for="Product.IsEnabled" class="form-check-label">Ενεργό</label>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-secondary w-100">Επιστροφή στη Λίστα</a>
                            </div>
                            <div class="col-md-6">
                                <input type="submit" value="Αποθήκευση" class="btn btn-primary w-100" id="saveButton" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Προσθήκη client-side κώδικα για να επιβεβαιώσουμε ότι η φόρμα υποβάλλεται σωστά
        $(document).ready(function () {
            $("#editForm").on("submit", function (e) {
                console.log("Product edit form submitted");
                // Επιστρέφουμε true για να επιτρέψουμε την κανονική υποβολή της φόρμας
                return true;
            });
        });
    </script>
}