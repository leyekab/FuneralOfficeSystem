@page
@model FuneralOfficeSystem.Pages.Suppliers.EditModel

@{
    ViewData["Title"] = "Επεξεργασία Προμηθευτή";
}

<div class="container">
    <h1 class="text-center mb-4">Επεξεργασία Προμηθευτή</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post" id="editForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Supplier.Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Supplier.Name" class="control-label">Όνομα</label>
                                    <input asp-for="Supplier.Name" class="form-control" required />
                                    <span asp-validation-for="Supplier.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <span class="text-danger">*</span>
                                    <label asp-for="Supplier.Phone" class="control-label">Τηλέφωνο</label>
                                    <input asp-for="Supplier.Phone" class="form-control" required />
                                    <span asp-validation-for="Supplier.Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Supplier.Address" class="control-label">Διεύθυνση</label>
                            <input asp-for="Supplier.Address" class="form-control" />
                            <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <span class="text-danger">*</span>
                            <label asp-for="Supplier.SupplierType" class="control-label">Τύπος Προμηθευτή</label>
                            <select asp-for="Supplier.SupplierType" asp-items="Html.GetEnumSelectList<FuneralOfficeSystem.Models.SupplierType>()" class="form-control" required>
                            </select>
                            <span asp-validation-for="Supplier.SupplierType" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="Supplier.IsEnabled" class="form-check-input" />
                            <label asp-for="Supplier.IsEnabled" class="form-check-label">Ενεργό</label>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <a asp-page="./Index" class="btn btn-secondary w-100">Επιστροφή στη Λίστα</a>
                            </div>
                            <div class="col-md-6">
                                <input type="submit" value="Αποθήκευση" class="btn btn-primary w-100" id="saveButton" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Προσθήκη client-side κώδικα για να επιβεβαιώσουμε ότι η φόρμα υποβάλλεται σωστά
        $(document).ready(function () {
            $("#editForm").on("submit", function (e) {
                console.log("Supplier edit form submitted");
                // Επιστρέφουμε true για να επιτρέψουμε την κανονική υποβολή της φόρμας
                return true;
            });
        });
    </script>
}